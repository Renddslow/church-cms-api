{
  "name": "church-cms-api",
  "version": "0.1.0",
  "private": false,
  "description": "An api/identity server for Church CMS",
  "repository": "https://github.com/Renddslow/church-cms-api",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "ava": "^3.12.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.5",
    "body-parser": "^1.19.0",
    "catchify": "^2.6.1",
    "cors": "^2.8.5",
    "dot-prop": "^5.2.0",
    "dotenv": "^8.2.0",
    "front-matter": "^4.0.2",
    "graphql": "^15.3.0",
    "graphql-request": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "mandrill-api": "^1.0.45",
    "mannish": "^4.0.1",
    "polka": "^0.5.2",
    "yaml": "^1.10.0"
  }
}
